---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
---

<Layout title="Welcome to Astro.">
	<NavBar></NavBar>

	<main class="bg-[url('/assets/img/Home-slider1.svg')] bg-no-repeat bg-cover font-oswald">
		<section class="flex items-center justify-center p-10 w-full h-[calc(100vh-76px)]">
			<div class="flex flex-col items-center justify-center text-center gap-14">
				<button class="bg-pescar-orange text-[#f0f0f0] text-lg font-bold w-full px-16 py-5 uppercase">Ingresar</button>
				<button class="bg-pescar-orange text-[#f0f0f0] text-lg font-bold w-full px-16 py-5 uppercase">Registrarse</button>
			</div>
		</section>
	</main>
</Layout>