---
import Layout from '../layouts/Layout.astro'
import NavBar from '../components/NavBar.astro';
---

<Layout title='Ingresar'>
  <NavBar></NavBar>
	<main class="bg-[url('/assets/img/Home-slider1.jpg')] bg-no-repeat bg-cover p-10">
    <a href="/" class="flex items-center justify-start gap-2">
      <img src="/assets/img/Go-Back.svg" alt="">
      <span class="text-lg text-pescar-orange font-semibold uppercase">Regresar</span>
    </a>
    <h2 class="text-2xl uppercase text-[#f0f0f0] font-bold tracking-tight py-11">Iniciar Sesión</h2>
    <form action="" class="flex flex-col gap-6">
      <input type="text" placeholder="EMAIL O USUARIO*" class="p-5 bg-transparent border-[#f0f0f0] border-2 placeholder:text-[#f0f0f0] text-[#f0f0f0] text-xl">
      <input type="password" placeholder="CONTRASEÑA*" class="p-5 bg-transparent border-[#f0f0f0] border-2 placeholder:text-[#f0f0f0] text-[#f0f0f0] text-xl">
      <a href="" class="uppercase text-[#f0f0f0] text-sm font-semibold underline underline-offset-4 decoration-2 decoration-[#f0f0f0]">Olvidaste la contraseña?</a>
      <div class="flex flex-row-reverse justify-end items-center gap-2 py-5">
        <label for="checkbox" class="uppercase text-[#f0f0f0] text-sm font-semibold">Dejar la sesión iniciada</label>
        <input type="checkbox" class="bg-transparent border-[#f0f0f0] border-2 p-3">
      </div>
      <button class="bg-pescar-orange text-[#f0f0f0] text-lg font-bold w-full px-16 py-5 uppercase" type="submit">Ingresar</button>
    </form>
	</main>
</Layout>